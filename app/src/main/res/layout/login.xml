<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ofwhite"
    tools:context=".Login">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/head"/>

    <LinearLayout
        android:gravity="center"
        android:background="@drawable/body"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="110dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_gravity="top|center"
            android:gravity="center"
            android:textColor="@color/blue"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:background="@drawable/button_white"
            android:text="Tour Mate"/>

        <EditText
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColorHint="@color/blue"
            android:backgroundTint="@color/blue"
            android:layout_gravity="center"
            android:id="@+id/email_login_ed"/>
        <EditText
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColorHint="@color/blue"
            android:backgroundTint="@color/blue"
            android:layout_gravity="center"
            android:id="@+id/pass_login_ed"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password"
            android:textStyle="bold"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:textColor="@color/blue"
            android:id="@+id/forgot_pass"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="80dp"
                android:background="@drawable/button_blue"
                android:text="Login"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white" />

            <ProgressBar
                android:id="@+id/pBar_L"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/login"
                android:layout_alignRight="@id/login"
                android:layout_marginTop="-2dp"
                android:layout_marginEnd="27dp"
                android:indeterminateDrawable="@drawable/progresbar"
                android:visibility="invisible"
                android:layout_marginRight="-53dp"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Didn't have an account ? Signup here"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/blue"
            android:layout_marginTop="40dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/signup_login"/>


    </LinearLayout>


</RelativeLayout>